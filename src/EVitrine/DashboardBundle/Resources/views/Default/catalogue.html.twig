{% extends 'dashboard.html.twig' %}
{% block title %}E-Vitrine | Catalogue{% endblock %}
{% block body %}
      <div class="sub-heard-part">
        <ol class="breadcrumb m-b-0">
            <li><a href="">Dashboard</a></li>
            <li class="active">Notre catalogue des produits</li>
        </ol>
    </div>
    <h3 class="inner-tittle two">Liste des produits</h3>
    <div class="graph">
        <div class="tables">

            <table class="table table-hover"> 
                <thead> 
                    <tr> 
                        <th>#</th> 
                        <th>Titre</th>                     
                        <th>Prix</th> 
                        <th>Poids</th> 
                        <th>Description</th> 
                        <th>Visibilit√©</th> 
                        <th>Action</th> 
                    </tr> 
                </thead> 
                <tbody> 
                    {% for product in products %}
                        <tr>
                            <td>{{loop.index}}</td>
                            <td>{{product.title}}</td>
                            <td>{{product.price}}</td>
                            <td>{{product.weight}}</td>
                            <td>{{product.description}}</td>
                            <td>{%if product.isVisible %} <i class="fa fa-check"></i>{%endif%}</td>
                            <td>
                                {%if product.isVisible %}
                                    <a class="btn btn-primary"> Rendre invisible<a>
                                {%else%}
                                    <a class="btn btn-primary"> Rendre visible<a>  
                                {%endif%}
                            </td>
                        </tr>
                    {% endfor %}
                </tbody> 
            </table>
        </div>

    </div>
{% endblock %}

